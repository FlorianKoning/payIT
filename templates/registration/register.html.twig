{% extends 'guest.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="px-4 sm:px-6 lg:px-8 py-10">
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-3'}}) }}

            {# first name input #}
            <div>
                {{ form_label(registrationForm.firstName, null, {'label_attr': {'class': 'block font-medium text-sm text-white'}}) }}
                {{ form_widget(registrationForm.firstName, {
                    'attr': {'class': 'bg-banner text-white px-3 py-2 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-secondMain focus:border-transparent rounded-md shadow-md block mt-1 w-full'},
                    'error_attr': {'class': 'mt-1 text-sm text-red-600 font-medium'}
                }) }}
                {% if form_errors(registrationForm.firstName) is not empty %}
                    <div class="mt-1 text-sm text-red-600 font-medium">
                        {{ form_errors(registrationForm.firstName) }}
                    </div>
                {% endif %}
            </div>

            {# last name input #}
            <div>
                {{ form_label(registrationForm.lastName, null, {'label_attr': {'class': 'block font-medium text-sm text-white'}}) }}
                {{ form_widget(registrationForm.lastName, {
                    'attr': {'class': 'bg-banner text-white px-3 py-2 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-secondMain focus:border-transparent rounded-md shadow-md block mt-1 w-full'},
                    'error_attr': {'class': 'mt-1 text-sm text-red-600 font-medium'}
                }) }}
                {% if form_errors(registrationForm.lastName) is not empty %}
                    <div class="mt-1 text-sm text-red-600 font-medium">
                        {{ form_errors(registrationForm.lastName) }}
                    </div>
                {% endif %}
            </div>

            {# email input #}
            <div>
                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block font-medium text-sm text-white'}}) }}
                {{ form_widget(registrationForm.email, {
                    'attr': {'class': 'bg-banner text-white px-3 py-2 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-secondMain focus:border-transparent rounded-md shadow-md block mt-1 w-full'},
                    'error_attr': {'class': 'mt-1 text-sm text-red-600 font-medium'}
                }) }}
                {% if form_errors(registrationForm.email) is not empty %}
                    <div class="mt-1 text-sm text-red-600 font-medium">
                        {{ form_errors(registrationForm.email) }}
                    </div>
                {% endif %}
            </div>

            {# password input #}
            <div>
                {{ form_label(registrationForm.plainPassword, 'Wachtwoord', {'label_attr': {'class': 'block text-sm font-medium text-white mb-1'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-3 py-2 text-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-secondMain focus:border-transparent'}}) }}
                {% if form_errors(registrationForm.plainPassword) is not empty %}
                    <div class="mt-1 text-sm text-red-600 font-medium">
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>
                {% endif %}
            </div>

            {# terms input #}
            <div class="flex items-center">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 text-secondMain focus:ring-secondMain border-secondMain rounded'}}) }}
                {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'ml-2 block text-sm text-title'}}) }}
                {% if form_errors(registrationForm.agreeTerms) is not empty %}
                    <div class="mt-1 text-sm text-red-600 font-medium">
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>
                {% endif %}
            </div>

            <div class="pt-4">
                <button type="submit" class="w-full bg-secondMain hover:bg-secondMain/80 text-white font-bold py-3 px-4 rounded-md transition duration-200 cursor-pointer">
                    Registreren
                </button>
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
